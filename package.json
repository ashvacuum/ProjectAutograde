{
  "name": "unity-auto-grader-desktop",
  "version": "1.0.2",
  "description": "Desktop application for automated Unity game math assignment grading",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "package-win": "electron-packager . unity-auto-grader --platform=win32 --arch=x64 --out=dist --overwrite --prune=true",
    "dist": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "jspdf": "^3.0.3",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.unityautograder.desktop",
    "productName": "Unity Auto-Grader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "compression": "normal",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "unity",
    "grading",
    "canvas",
    "automation",
    "game-development",
    "education",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/unity-auto-grader"
}
