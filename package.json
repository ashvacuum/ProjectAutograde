{
  "name": "aralaro",
  "version": "1.2.1",
  "description": "AraLaro - Desktop application for automated Unity game math assignment grading",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "jspdf": "^3.0.3",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.aralaro.desktop",
    "productName": "AraLaro",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "compression": "normal",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "unity",
    "grading",
    "canvas",
    "automation",
    "game-development",
    "education",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/unity-auto-grader"
}
